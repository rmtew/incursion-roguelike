              case 2:  hMon->AddTemplate($"experienced"); break;
              case 3:  hMon->AddTemplate($"experienced"); break;
              case 4:  hMon->AddTemplate($"veteran"); break;
              case 5:  hMon->AddTemplate($"chieftan"); break;
              case 6:  hMon->AddTemplate($"shaman"); break;
