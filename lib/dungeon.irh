          CONSTRAINED_ENC($"goblinoid warband",MA_KOBOLD); 
    On Event EV_BIRTH {
      hObj tr; int16 i,j; rID xID;
      j = 2d10;
      for(i=0;i<j;i++) {
        xID = theGame->GetEffectID(PUR_DUNGEON,0,EMap->Depth+3,AI_TRAP);
        if (xID) {
          if (EMap->FindOpenAreas(e.cPanel)) {
            tr = CreateTrap($"trap", xID);
            if (tr != NULL_OBJ)
              tr->PlaceOpen(EMap);
            }
          }
        }      
