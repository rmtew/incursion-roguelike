#define INCREASE_TENSION                                          \
  tension++;                                                      \
  switch(tension)                                                 \
    {                                                             \
      case 5:                                                     \
        EActor->IPrint("You feel a certain tension.");            \
        break;                                                     \
      case 10:                                                    \
        EActor->IPrint("You feel somewhat out of sync with the harmonies of the world."); \
        break;                                                     \
