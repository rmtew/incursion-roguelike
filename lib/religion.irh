      * AID_CHART  
          AID_HEAL           P_LOW       0
          AID_PURIFY         P_LOW       0 
          AID_SMITE          P_MODERATE  0
          AID_DEFLECT        P_LOW       1500
          AID_IDENTIFY       T_ITEM      1500     
          AID_RESURRECT      P_LOW       3500
          AID_NEWBOOK        P_LOW       750      
          AID_MANA           P_LOW       125;    
    Constants:
      * VOICE_COLOUR COL_POISON,
      * ALTAR_COLOUR SHADOW,
      * HOLY_SYMBOL $"The Multitude;symbol",
      * CHOSEN_WEAPON_QUALITY WQ_UNHOLY,
      * INTERVENTION_COST 3,
      * RESURRECTION_COST 7,
