          return ABORT; }
      hAltar = CreateFeature($"altar");
      hAltar->GainPermStati(MY_GOD, NULL_OBJ, SS_MISC, 0, 0, EActor->GodID);
      hAltar->PlaceAt(EMap, EActor->x, EActor->y);
      if (EActor->isCharacter())
