      if (ch == -1)
        return ABORT;
      return NOTHING;
      },
    EV_MAGIC_HIT {
      hObj hA, hB;
      switch (ch)
        {
          case 'm':
            ETarget->GainTempStati(BOOST_PLUS,EActor,e.vDuration,SS_ENCH,1,
