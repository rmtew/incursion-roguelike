        EActor->IncEffStatiMag(EFF_FLAG1,
           $"Death Stealing", SS_MISC, NULL, 1d6);
      if (EActor->ChallengeRating() >= 11)
        {
          EActor->GainPermStati(INNATE_SPELL,NULL, 
            SS_RACE,0,0, $"energy drain");
          EActor->GainPermStati(INNATE_SPELL,NULL, 
