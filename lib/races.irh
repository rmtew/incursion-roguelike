Monster "kobold;temp" : MA_KOBOLD, MA_ADVENTURER
	{                        
		Image: green GLYPH_PLAYER; Size: SZ_SMALL; Mana: 10; Arm: 2;
    CR: 0; HD: 1; Hit: +0; Def: 10; Mov: 75%; Speed: 100%;
    Attk:A_BITE for 1d6 AD_PIERCE,
         A_CLAW for 1d4 AD_SLASH,
