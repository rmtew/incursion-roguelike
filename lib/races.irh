Race "Halfling;race"
  {
    Str -2, Dex +2, Con 0, Int 0, Wis 0, Cha +2, Luc +4;
    Monster: $"halfling;temp"; Favoured Class: $"rogue", $"bard";
    Skills: SK_HIDE, SK_TUMBLE, SK_CLIMB, SK_DIPLOMACY, 
