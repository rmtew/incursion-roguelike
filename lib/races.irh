	RACIAL_SKILL(SK_HANDLE_DEV,4);
	RACIAL_SKILL(SK_MINING,2);
	RACIAL_SKILL(SK_SEARCH,2);
	ABILITY(CA_INFRAVISION,6);

    Flags: M_CARNI, M_HERBI, M_HUMANOID, M_NOGEN, M_NOPOLY,
            M_LIGHT_AVERSE, M_PLAYER;
    Immune: DF_POIS;
    Desc: "Kobold Player Race"; 
