        if (GetHandle(EVictim) == NULL)
          return NOTHING;
        if (EVictim->isDead())
          return NOTHING;
        if (EVictim->SavingThrow(FORT,17,SA_DEATH))
          { e.Resist = true; return NOTHING; }
        TPrint(e,"You rip out the <EVictim>'s heart!",
