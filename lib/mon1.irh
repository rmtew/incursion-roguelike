Monster "eagle" : MA_BIRD, MA_ANIMAL
  {
    Image: yellow 'b'; Size: SZ_SMALL; 
    CR: OPT_CR(-4,1/2); HD: 1; Hit: 1; Def: 11; Mov: 200%; Spd: 120%;
    Str 10, Dex 15, Con 12, Int 2, Wis 14, Cha 4;
    Attk: A_CLAW for 1d3 AD_SLASH,
